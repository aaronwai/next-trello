// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"     // forgot to add this line before
}

generator client {
  provider = "prisma-client-js"
}
model Board {
  id            String @id @default(uuid())
  orgId         String   // this is orgId
  title         String
  imageId       String   // this is image Id
  imageThumbUrl String @db.Text   // these are part of the image sizes info
  imageFullUrl  String @db.Text
  imageUserName String @db.Text
  imageLinkHTML String @db.Text

  createdAt     DateTime @default(now())  // add date record
  updatedAt     DateTime @updatedAt
}